citHeader("To cite sanssouci in publications, please use the following references:")


year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste("R package version", meta$Version)
title <- meta$Title
citEntry(entry="Manual",
         title = paste("sanssouci:", title),
         author   = personList(as.person("Pierre Neuvial"),
                               as.person("Gilles Blanchard"),
                               as.person("Guillermo Durand"),
                               as.person("Nicolas Enjalbert-Courrech"),
                               as.person("Etienne Roquain")),
         year = year,
         note = vers,
         url =  "https://sanssouci-org.github.io/sanssouci",
         textVersion =
         paste("Pierre Neuvial, Gilles Blanchard, Guillermo Durand, Etienne Roquain and Nicolas Enjalbert-Courrech (",
               year,
               "). sanssouci: ",
               title, ". ",
               vers, ". https://sanssouci-org.github.io/sanssouci", sep=""))

citEntry(
  entry     = "InBook",
  title     = "On agnostic post hoc approaches to false positive control",
  author    = personList(as.person("Gilles Blanchard"),
                             as.person("Pierre Neuvial"),
                             as.person("Etienne Roquain")),
  year      = 2021,
  url       = "https://hal.archives-ouvertes.fr/hal-02320543",
  booktitle = "Handbook of Multiple Comparisons",
  chapter   = 9,
  publisher = "Chapman and Hall/CRC ",
  editor    = personList(as.person("Xinping Cui"),
                             as.person("Thorsten Dickhaus"),
                             as.person("Ying Ding"),
                             as.person("Jason C. Hsu")),
  textVersion = "Blanchard, G., Neuvial, P., & Roquain, E. (2021). On agnostic post hoc approaches to false positive control. In 'Handbook of Multiple Comparisons', edited by Xinping Cui, Thorsten Dickhaus, Ying Ding, Jason C. Hsu. Chapman & Hall/CRC")

citEntry(
  entry    = "Article",
  title    = "Post Hoc Confidence Bounds on False Positives Using Reference Families",
  author   = personList(as.person("Gilles Blanchard"),
                             as.person("Pierre Neuvial"),
                             as.person("Etienne Roquain")),
  journal  = "Annals of Statistics",
  year     = 2020,
  volume   = 48,
  number   = 3,
  pages    = "1281--1303",
  url      = "https://projecteuclid.org/euclid.aos/1594972818",
  textVersion = "Blanchard, G., Neuvial, P., & Roquain, E. (2020). Post hoc confidence bounds on false positives using reference families. Annals of Statistics, 48(3), 1281-1303."
  )

citEntry(
  entry    = "Article",
  title    = "Post hoc false positive control for structured hypotheses",
  author   = personList(as.person("Guillermo Durand"),
                        as.person("Gilles Blanchard"),
                        as.person("Pierre Neuvial"),
                        as.person("Etienne Roquain")),
  journal  = "Scandinavian Journal of Statistics",
  year     = 2020,
  url      = "https://projecteuclid.org/euclid.aos/1594972818",
  textVersion = "Durand, G., Blanchard, G., Neuvial, P., & Roquain, E. (2020). Post hoc false positive control for structured hypotheses. Scandinavian Journal of Statistics, 47(4), 1114-1148."
  )
  
citEntry(
  entry       = "Article", 
  title       = "Powerful and interpretable control of false discoveries in two-group differential expression studies", 
  author      = personList(as.person("Nicolas Enjalbert-Courrech"), 
                           as.person("Pierre Neuvial")), 
  journal      = "Bioinformatics", 
  year        = 2022, 
  url         = "https://doi.org/10.1093/bioinformatics/btac693",
  textVersion = "Enjalbert-Courrech, N. & Neuvial, P. (2022). Powerful and interpretable control of false discoveries in two-group differential expression studies. Bioinformatics. doi: 10.1093/bioinformatcs/btac693"
)

